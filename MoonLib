--[[
MoonLib - –õ—É–Ω–Ω–∞—è UI –±–∏–±–ª–∏–æ—Ç–µ–∫–∞ —Å –Ω–µ–æ–±—ã—á–Ω—ã–º –¥–∏–∑–∞–π–Ω–æ–º
–û—Å–æ–±–µ–Ω–Ω–æ—Å—Ç–∏:
- –ü–ª–∞–≤–Ω—ã–µ –∞–Ω–∏–º–∞—Ü–∏–∏
- –ù–µ—Å—Ç–∞–Ω–¥–∞—Ä—Ç–Ω—ã–µ —ç–ª–µ–º–µ–Ω—Ç—ã —É–ø—Ä–∞–≤–ª–µ–Ω–∏—è
- –¢–µ–º–Ω–∞—è/—Å–≤–µ—Ç–ª–∞—è —Ç–µ–º—ã —Å –ª—É–Ω–Ω—ã–º–∏ –∞–∫—Ü–µ–Ω—Ç–∞–º–∏
- –ö–∞—Å—Ç–æ–º–Ω—ã–µ –∏–∫–æ–Ω–∫–∏
- –≠—Ñ—Ñ–µ–∫—Ç—ã –ø–∞—Ä–∞–ª–ª–∞–∫—Å–∞
]]

local MoonLib = {}
MoonLib.__index = MoonLib

-- –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –±–∏–±–ª–∏–æ—Ç–µ–∫–∏
function MoonLib:Init(options)
    options = options or {}
    local self = setmetatable({
        Theme = options.Theme or "Dark",
        AccentColor = options.AccentColor or Color3.fromRGB(136, 114, 255),
        Transparency = options.Transparency or 0.8,
        Version = "1.0.0",
        _elements = {},
        _notifications = {}
    }, MoonLib)
    
    -- –°–æ–∑–¥–∞–Ω–∏–µ –æ—Å–Ω–æ–≤–Ω–æ–≥–æ –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å–∞
    self:CreateUI()
    return self
end

-- –°–æ–∑–¥–∞–Ω–∏–µ –æ—Å–Ω–æ–≤–Ω–æ–≥–æ UI
function MoonLib:CreateUI()
    -- –ó–¥–µ—Å—å –±—É–¥–µ—Ç –∫–æ–¥ —Å–æ–∑–¥–∞–Ω–∏—è –æ—Å–Ω–æ–≤–Ω–æ–≥–æ –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å–∞
    -- —Å —ç–∫—Ä–∞–Ω–Ω–æ–π –∫–ª–∞–≤–∏–∞—Ç—É—Ä–æ–π, —É–≤–µ–¥–æ–º–ª–µ–Ω–∏—è–º–∏ –∏ —Ç.–¥.
end

-- –°–æ–∑–¥–∞–Ω–∏–µ –æ–∫–Ω–∞
function MoonLib:Window(options)
    options = options or {}
    local window = {
        Title = options.Title or "MoonLib Window",
        Size = options.Size or Vector2.new(500, 400),
        Position = options.Position or nil,
        AutoCenter = options.AutoCenter == nil and true or options.AutoCenter,
        _tabs = {},
        _isOpen = false
    }
    
    -- –ú–µ—Ç–æ–¥—ã –æ–∫–Ω–∞
    function window:Toggle()
        self._isOpen = not self._isOpen
        -- –ê–Ω–∏–º–∞—Ü–∏—è –æ—Ç–∫—Ä—ã—Ç–∏—è/–∑–∞–∫—Ä—ã—Ç–∏—è
    end
    
    function window:Tab(options)
        local tab = {
            Name = options.Name or "Tab",
            Icon = options.Icon or "üåô",
            _elements = {}
        }
        
        -- –ú–µ—Ç–æ–¥—ã —Ç–∞–±–∞
        function tab:Section(options)
            local section = {
                Title = options.Title or "Section",
                Collapsible = options.Collapsible or false,
                _elements = {}
            }
            
            -- –î–æ–±–∞–≤–ª–µ–Ω–∏–µ —ç–ª–µ–º–µ–Ω—Ç–æ–≤ –≤ —Å–µ–∫—Ü–∏—é
            function section:Button(options)
                local button = {
                    Text = options.Text or "Button",
                    Callback = options.Callback or function() end,
                    _type = "Button"
                }
                table.insert(section._elements, button)
                return button
            end
            
            -- –î—Ä—É–≥–∏–µ —ç–ª–µ–º–µ–Ω—Ç—ã (Slider, Toggle, Dropdown –∏ —Ç.–¥.)
            
            table.insert(tab._elements, section)
            return section
        end
        
        table.insert(window._tabs, tab)
        return tab
    end
    
    table.insert(self._elements, window)
    return window
end

-- –£–≤–µ–¥–æ–º–ª–µ–Ω–∏—è
function MoonLib:Notify(options)
    local notification = {
        Title = options.Title or "Notification",
        Text = options.Text or "",
        Duration = options.Duration or 5,
        Icon = options.Icon or "üåô"
    }
    
    -- –ê–Ω–∏–º–∞—Ü–∏—è –ø–æ—è–≤–ª–µ–Ω–∏—è —É–≤–µ–¥–æ–º–ª–µ–Ω–∏—è
    table.insert(self._notifications, notification)
    return notification
end

-- –î—Ä—É–≥–∏–µ –º–µ—Ç–æ–¥—ã –±–∏–±–ª–∏–æ—Ç–µ–∫–∏...

return MoonLib
