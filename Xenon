-- ModuleScript в ReplicatedStorage с именем 'XenonUI'
local Xenon = {}

-- Настройки стиля
local theme = {
    Primary = Color3.fromRGB(28, 28, 28),    -- Основной цвет
    Secondary = Color3.fromRGB(45, 45, 45),  -- Вторичный цвет
    Accent = Color3.fromRGB(100, 255, 255),  -- Акцентный неоновый
    Text = Color3.fromRGB(255, 255, 255),    -- Текст
    Glow = Color3.fromRGB(150, 255, 255),    -- Свечение
    Stroke = Color3.fromRGB(80, 80, 80)      -- Обводка
}

local function applyNeonEffect(element)
    local glow = Instance.new("UIStroke")
    glow.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
    glow.Color = theme.Glow
    glow.Transparency = 0.5
    glow.Thickness = 2
    glow.Parent = element
    
    local gradient = Instance.new("UIGradient")
    gradient.Rotation = 90
    gradient.Color = ColorSequence.new({
        ColorSequenceKeypoint.new(0, theme.Glow),
        ColorSequenceKeypoint.new(1, Color3.new(1,1,1))
    })
    gradient.Parent = glow
    
    return glow
end

function Xenon.NewWindow(title)
    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = "XenonUI"
    screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
    
    local mainFrame = Instance.new("Frame")
    mainFrame.Name = "MainWindow"
    mainFrame.Size = UDim2.new(0, 400, 0, 300)
    mainFrame.Position = UDim2.new(0.5, -200, 0.5, -150)
    mainFrame.AnchorPoint = Vector2.new(0.5, 0.5)
    mainFrame.BackgroundColor3 = theme.Primary
    mainFrame.BackgroundTransparency = 0.1
    mainFrame.ClipsDescendants = true
    
    local mainCorner = Instance.new("UICorner")
    mainCorner.CornerRadius = UDim.new(0, 8)
    mainCorner.Parent = mainFrame
    
    -- Заголовок
    local header = Instance.new("Frame")
    header.Name = "Header"
    header.Size = UDim2.new(1, 0, 0, 30)
    header.BackgroundColor3 = theme.Secondary
    header.Parent = mainFrame
    
    local titleLabel = Instance.new("TextLabel")
    titleLabel.Text = title
    titleLabel.Font = Enum.Font.GothamBold
    titleLabel.TextColor3 = theme.Text
    titleLabel.Size = UDim2.new(1, -40, 1, 0)
    titleLabel.Position = UDim2.new(0, 10, 0, 0)
    titleLabel.TextXAlignment = Enum.TextXAlignment.Left
    titleLabel.Parent = header
    
    -- Эффекты
    applyNeonEffect(mainFrame)
    applyNeonEffect(header)
    
    -- Интерактивные элементы
    local interactables = Instance.new("Folder")
    interactables.Name = "Interactables"
    interactables.Parent = mainFrame
    
    return {
        _frame = mainFrame,
        AddButton = function(self, buttonText)
            local newButton = Instance.new("TextButton")
            newButton.Name = "Button"
            newButton.Size = UDim2.new(1, -20, 0, 40)
            newButton.Position = UDim2.new(0, 10, 0, #interactables:GetChildren() * 50 + 40)
            newButton.BackgroundColor3 = theme.Secondary
            newButton.TextColor3 = theme.Text
            newButton.Font = Enum.Font.GothamMedium
            newButton.Text = buttonText
            newButton.Parent = interactables
            
            local buttonCorner = Instance.new("UICorner")
            buttonCorner.CornerRadius = UDim.new(0, 6)
            buttonCorner.Parent = newButton
            
            local buttonStroke = applyNeonEffect(newButton)
            
            -- Анимация при наведении
            newButton.MouseEnter:Connect(function()
                game:GetService("TweenService"):Create(newButton, TweenInfo.new(0.2), {
                    BackgroundColor3 = theme.Secondary:Lerp(theme.Accent, 0.3)
                }):Play()
            end)
            
            newButton.MouseLeave:Connect(function()
                game:GetService("TweenService"):Create(newButton, TweenInfo.new(0.2), {
                    BackgroundColor3 = theme.Secondary
                }):Play()
            end)
            
            return newButton
        end
    }
end

return Xenon
